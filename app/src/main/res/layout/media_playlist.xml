<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/space_8"
    android:layout_marginVertical="@dimen/space_16"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mediaPlaylistImage"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_0"
        android:background="@drawable/bg_playlist_image"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/mediaPlaylistName"
        style="@style/MediaPlaylistTextStyle"
        android:layout_marginTop="@dimen/space_4"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="@dimen/add_playlist_field_text_size"
        app:layout_constraintTop_toBottomOf="@id/mediaPlaylistImage"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/mediaPlaylistTrackCount"
        style="@style/MediaPlaylistTextStyle"
        app:layout_constraintTop_toBottomOf="@id/mediaPlaylistName"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>