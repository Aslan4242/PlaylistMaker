<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_40">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/space_20"
            android:paddingTop="@dimen/space_20"
            app:srcCompat="@drawable/ic_arrow_back"
            style="@style/BackButtonStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="28dp"
            android:paddingTop="14dp"
            android:text="@string/search_button"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="22sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/space_20"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/search_field"
            style="@style/SearchEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:drawableStart="@drawable/ic_search_button"
            android:drawablePadding="11dp"
            android:hint="@string/search_button"
            android:inputType="text"
            android:lines="1"
            android:paddingStart="13dp"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/main_icon_padding"
            android:background="@color/transparent"
            android:src="@drawable/clear_text_button"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>