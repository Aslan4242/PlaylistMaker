<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/settings_margin_left">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            app:srcCompat="@drawable/ic_arrow_back"
            app:iconTint="@color/black_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="28dp"
            android:paddingTop="14dp"
            android:text="@string/settings"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/black_2"
            android:textSize="22sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/settings_margin_left"
            android:layout_marginTop="@dimen/settings_margin_top_bottom"
            android:layout_marginBottom="@dimen/settings_margin_top_bottom"
            android:text="@string/night_theme"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_text_size" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_margin_top_bottom"
            android:layout_marginLeft="@dimen/settings_margin_left"
            android:layout_marginBottom="@dimen/settings_margin_top_bottom"
            android:text="@string/share_app"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_text_size" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/white"
            app:iconGravity="textStart"
            app:iconTint="@color/grey"
            app:srcCompat="@drawable/ic_share_app" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/settings_margin_top_bottom"
            android:layout_marginLeft="@dimen/settings_margin_left"
            android:layout_marginBottom="@dimen/settings_margin_top_bottom"
            android:textSize="@dimen/settings_text_size" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/white"
            app:iconGravity="textStart"
            app:iconTint="@color/grey"
            app:srcCompat="@drawable/ic_support" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/settings_margin_left"
            android:layout_marginTop="@dimen/settings_margin_top_bottom"
            android:layout_marginBottom="@dimen/settings_margin_top_bottom"
            android:text="@string/terms_of_use"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_text_size" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/white"
            app:iconGravity="textStart"
            app:iconTint="@color/grey"
            app:srcCompat="@drawable/ic_arrow_forward" />

    </RelativeLayout>

</LinearLayout>