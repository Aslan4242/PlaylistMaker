<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainBackgroundStyle">
        <item name="android:background">@color/black_2</item>
    </style>

    <style name="BackButtonStyle">
        <item name="android:background">@color/black_2</item>
        <item name="android:tint">@color/white</item>
        <item name="android:iconTint">@color/black_2</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/main_button_margin_bottom</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_2</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="cornerRadius">@dimen/main_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_icon_padding</item>
        <item name="iconTint">@color/black_2</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/settings_margin_top_bottom</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchEditTextStyle">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/black_2</item>
        <item name="android:textColor">@color/black_2</item>
    </style>

    <style name="ClearButtonStyle">
        <item name="android:tint">@color/black_2</item>
    </style>
</resources>