<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationViewStyle">
        <item name="android:background">@color/black_2</item>
        <item name="itemIconTint">@drawable/bottom_navigation_color_night</item>
        <item name="itemTextColor">@drawable/bottom_navigation_color_night</item>
    </style>

    <style name="BackButtonStyle">
        <item name="android:background">@color/black_2</item>
        <item name="android:tint">@color/white</item>
        <item name="android:iconTint">@color/black_2</item>
    </style>

    <style name="SettingsTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/settings_margin_top_bottom</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchEditTextStyle">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/black_2</item>
        <item name="android:textColor">@color/black_2</item>
    </style>

    <style name="TrackNameStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/track_name_text_size</item>
    </style>

    <style name="TrackDataStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/track_data_text_size</item>
    </style>

    <style name="TrackArrowStyle">
        <item name="drawableEndCompat">@drawable/ic_arrow_forward_white</item>
    </style>

    <style name="TrackCircleSeparatorStyle">
        <item name="srcCompat">@drawable/circle</item>
    </style>

    <style name="PlaceHolderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_102</item>
        <item name="android:layout_marginHorizontal">@dimen/space_24</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/placeholder_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:text">@string/nothing_found</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:visibility">gone</item>
        <item name="drawableTopCompat">@drawable/ic_nothing_found_dark</item>
        <item name="android:drawablePadding">@dimen/search_padding_horizontal</item>
    </style>

    <style name="SomethingWentWrongStyle" parent="PlaceHolderStyle">
        <item name="drawableTopCompat">@drawable/ic_something_went_wrong_dark</item>
        <item name="android:text">@string/something_went_wrong</item>
    </style>

    <style name="RefreshButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_24</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/refresh_button</item>
        <item name="android:textSize">@dimen/refresh_button_text_size</item>
        <item name="cornerRadius">@dimen/refresh_button_corner_radius</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/space_100</item>
        <item name="android:layout_height">@dimen/space_100</item>
        <item name="android:layout_marginTop">@dimen/space_30</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:src">@drawable/ic_play_button_night</item>
    </style>

    <style name="AddToQueueButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/space_24</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:src">@drawable/ic_add_to_queue_night</item>
    </style>

    <style name="AddToFavoriteButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/space_24</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:src">@drawable/ic_add_to_favorite_night</item>
    </style>

    <style name="TrackInfoFieldStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/space_16</item>
        <item name="android:layout_marginTop">@dimen/space_30</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="TrackInfoValueStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/space_16</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textSize">@dimen/text_size_13</item>
    </style>

    <style name="NewPlaylistStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_24</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/refresh_button</item>
        <item name="android:textSize">@dimen/refresh_button_text_size</item>
        <item name="cornerRadius">@dimen/refresh_button_corner_radius</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="mediaTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabRippleColor">@color/white</item>
        <item name="tabIndicatorHeight">@dimen/space_2</item>
        <item name="android:layout_marginHorizontal">@dimen/space_16</item>
        <item name="tabTextAppearance">@style/mediaTabTextAppearance</item>
    </style>

    <style name="mediaTabTextAppearance">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>
</resources>
